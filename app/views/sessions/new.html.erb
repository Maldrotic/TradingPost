<div class="col-lg-12">
  <%= form_tag '/login', class: 'form-horizontal' do %>
    <fieldset>
      <legend>Login</legend>
      <div class="form-group">
        <%= label_tag :email, 'Email', class: 'col-lg-2 control-label' %>
        <div class="col-lg-8">
          <%= text_field_tag :email, '', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, 'Password', class: 'col-lg-2 control-label' %>
        <div class="col-lg-8">
          <%= password_field_tag :password, '', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-2">
          <%= submit_tag "Login", class: 'btn btn-default btn-primary' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>