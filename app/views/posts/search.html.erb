<h1 class="text-center">Search Posts</h1>

<div class="col-lg-12">
  <form action="/posts" method="get" class="form-horizontal">
    <fieldset>
      <div class="form-group">
        <label for="q" class="col-lg-3 control-label">Keyword</label>
        <div class="col-lg-6">
          <input type="text" class="form-control" id="q" name="q" placeholder="Search for...">
        </div>
      </div>
      <div class="form-group">
        <label for="instrument_id" class="col-lg-3 control-label">Instrument</label>
        <div class="col-lg-6">
          <select class="form-control" name="instrument_id" id="instrument_id">
            <option value=""></option>
            <% @categories.each do |category| %>
              <optgroup label="<%= category.name %>">
                <% category.instruments.each do |instrument| %>
                  <option value="<%= instrument.id %>"><%= instrument.name %></option>
                <% end %>
              </optgroup>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="price_min" class="col-lg-3 control-label">Minimum Price</label>
        <div class="col-lg-6">
          <div class="input-group">
            <div class="input-group-addon">$</div>
              <input class="form-control" id='price_min' min="1" name="price_min" type="number">
            <div class="input-group-addon">.00</div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="price_max" class="col-lg-3 control-label">Maximum Price</label>
        <div class="col-lg-6">
          <div class="input-group">
            <div class="input-group-addon">$</div>
              <input class="form-control" id='price_max' min="1" name="price_max" type="number">
            <div class="input-group-addon">.00</div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6 col-lg-offset-3">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>