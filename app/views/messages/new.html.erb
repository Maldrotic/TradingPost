<%= form_for :message, url: '/posts/'+@post.id.to_s+'/messages', :html => {:class => 'form-horizontal'} do |f| %>
  <fieldset>
    <legend>New Message <small>for</small> <%= @post.title %> <small>to</small> <%= @post.user.username %></legend>
    <div class="form-group">
      <%= f.label :text, class: 'col-lg-2 control-label' %>
      <div class="col-lg-8">
        <%= f.text_area :text, rows: 10, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <%= f.submit "Send", class: "btn btn-default btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>