<div class="row vertical-align">
  <div class="col-lg-3 col-lg-offset-3">
    <% if @user.image_url.nil? %>
      <img src="<%= @user.image_url %>" class="img-circle" alt="image">
    <% else %>
      <%= image_tag 'avatar.jpg', alt: 'Avatar', class: 'img-circle' %>        
    <% end %>
  </div>
  <div class="col-lg-4">
    <h1 class="center-vertically" id="username"><%= @user.username %></h1>
  </div>
</div>
<div id="post-list">

  <h2><%= @user.username %>'s Posts</h2>

  <hr>

  <%= render "posts/list" %>
</div>