<div class="col-lg-12">
  <%= form_for :user, url: '/users', :html => {:class => 'form-horizontal'} do |f| %>
    <fieldset>
      <legend>Signup</legend>
      <div class="form-group">
        <%= f.label :username, 'Username', class: 'col-lg-2 control-label' %>
        <div class="col-lg-8">
          <%= f.text_field :username, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Email', class: 'col-lg-2 control-label' %>
        <div class="col-lg-8">
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Password', class: 'col-lg-2 control-label' %>
        <div class="col-lg-8">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Password Confirmation', class: 'col-lg-2 control-label' %>
        <div class="col-lg-8">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-8 col-lg-offset-2">
          <%= f.submit "Create Account", class: 'btn btn-default btn-primary' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>